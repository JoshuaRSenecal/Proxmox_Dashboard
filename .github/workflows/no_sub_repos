# SSH into the nested Proxmox
ssh root@pve-nested

# Step 1: Disable the Enterprise repository
# (These repos require a subscription)

# Disable main Proxmox enterprise repo
mv /etc/apt/sources.list.d/pve-enterprise.list /etc/apt/sources.list.d/pve-enterprise.list.disabled

# Disable Ceph enterprise repo (if exists)
if [ -f /etc/apt/sources.list.d/ceph.list ]; then
    mv /etc/apt/sources.list.d/ceph.list /etc/apt/sources.list.d/ceph.list.disabled
fi

# Step 2: Add the no-subscription repository

# Check Proxmox version first
pveversion

# The output will show something like:
# pve-manager/8.x.x/xxxxxxxx (running kernel: x.x.x-x-pve)
